<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Cabeçalho com logo e fundo azul -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/blue_500">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo"
            android:contentDescription="Logo" />
    </LinearLayout>

    <!-- Área dos botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnCadastrarVideo"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/blue_500"
            android:text="Cadastrar novo vídeo"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnCriarEnquete"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/blue_500"
            android:text="Criar Enquete"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnAdicionarUsuario"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/blue_500"
            android:text="Adicionar usuário"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnExcluirUsuario"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/blue_500"
            android:text="Excluir usuário"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnExcluirVideo"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/blue_500"
            android:text="Excluir vídeo"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSair"
            style="?attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_500"
            android:text="Sair"
            android:textAllCaps="false"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
