<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".PerfilUsuario">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:contentDescription="Logo do app"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:id="@+id/layoutConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogo"
        android:orientation="vertical"
        android:background="@drawable/background_rounded"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Nome do Usuário"
            android:textColor="@color/blue_500"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@color/blue_500" />

        <TextView
            android:id="@+id/txtMatricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Matrícula: 123456"
            android:textColor="@color/blue_500"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtTipoConta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo: Administrador"
            android:textColor="@color/blue_500"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
